{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitUseStrict": false,
    "typeRoots" : ["node_modules/@types", "src/@types"],
    "rootDirs": ["./src", "./stories"],
    "strict": true,
    "target": "es6",
    "lib": ["dom", "es6",],
    "sourceMap": false,
    "alwaysStrict": false,
    "allowJs": true,
    "declarationMap": true,
    "baseUrl": ".",
    // "paths": {
    //   "@src": ["src"],
    //   "@components": ["src/components"],
    //   "@components/*": ["src/components/*"],
    //   "@global": ["src/global"],
    //   "@global/*": ["src/global/*"],
    //   "@hooks": ["src/hooks"],
    //   "@hooks/*": ["src/hooks/*"],
    //   "@convert": ["src/utils/convert"],
    //   "@convert/*": ["src/utils/convert/*"],
    //   "@utils": ["src/utils"],
    //   "@utils/*": ["src/utils/*"],
    //   "@types": ["src/@types"],
    // },
    "paths": {
      "*": ["./src/*"],
    },
  },
  "types": [
    "react",
    "node"
  ],
  "include": [
    "src",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "dist",
    "./stories",
    "node_modules",
    "src/stories",
    "**/__stories__"
  ],
}





